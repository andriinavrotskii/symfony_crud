<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-body">

                <form>
                    <input type="hidden" name="app_bundle_message_type[_token]" value="{{ csrf_token('app_bundle_message_type') }}">
                    <input type="hidden" name="app_bundle_message_type[id]" value="">

                    <div class="form-group name">
